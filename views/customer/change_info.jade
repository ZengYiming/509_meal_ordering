script(type='text/javascript', src='/js/change_info.js')
form(id='change_info', method='post', action='/change_info')
    ul
        - if (typeof(error) !== 'undefined') {
            = error
        - }
        li
            h3 头像:
            img(src='#{avatar_src}', alt='avatar', height=100, width=100)
            br
            button(id='update_img',type='button', onclick='update_img()') 更改头像
        li
            h3 用户名:
            h4 #{username}
        li
            h3 姓名:
            input(id='name',name='name',type='text',placeholder='姓名', value='#{name}')
        li
            h3 联系电话:
            input(id='tel',name='tel',type='text',placeholder='联系电话', value='#{tel}')
        li
            h3 Email:
            input(id='email',name='email',type='text',placeholder='电子邮箱', value='#{email}')
            input(id='id', name='id', type='hidden',value='#{id}')

    input(type='submit',id='submit',value='提交')